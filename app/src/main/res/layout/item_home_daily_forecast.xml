<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="3"
        android:gravity="center">
        <ImageView
            android:id="@+id/item_home_daily_forecast_icon"
            android:layout_width="30.94dp"
            android:layout_height="30dp"
            android:layout_gravity = "center"
            android:layout_marginStart="10dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/item_home_daily_forecast_time"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="16sp"
            android:textColor="#A098AE"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_gravity= "center">
            <TextView
                android:id="@+id/item_home_daily_forecast_min_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min_temp"
                android:textSize="14sp"
                android:textColor="#363B64"
                android:layout_gravity = "center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="14sp"
                android:layout_gravity = "center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/item_home_daily_forecast_max_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="max_temp"
                android:textSize="14sp"
                android:textColor="#363B64"
                android:layout_gravity = "center" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>